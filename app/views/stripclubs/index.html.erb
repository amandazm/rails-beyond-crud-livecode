<p id="notice"><%= notice %></p>

<h1>Stripclubs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Female dancers</th>
      <th>Male dancers</th>
      <th>Phone number</th>
      <th>Music</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stripclubs.each do |stripclub| %>
      <tr>
        <td><%= stripclub.name %></td>
        <td><%= stripclub.location %></td>
        <td><%= stripclub.female_dancers %></td>
        <td><%= stripclub.male_dancers %></td>
        <td><%= stripclub.phone_number %></td>
        <td><%= stripclub.music %></td>
        <td><%= link_to 'Show', stripclub %></td>
        <td><%= link_to 'Edit', edit_stripclub_path(stripclub) %></td>
        <td><%= link_to 'Destroy', stripclub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

