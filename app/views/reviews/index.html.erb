
<h1>Reviews</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Stripclub</th>
      <th class="text-right">Rating</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.stripclub.name %></td>
        <td class="text-right"><%= review.rating %></td>
        <td><%= review.content %></td>
        <td><%= link_to 'Show', review.stripclub %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
